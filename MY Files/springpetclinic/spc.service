[Unit]
Description=The springpetclinic service


[Service]
User=devops
WorkingDirectory=/home/devops/spc
ExecStart=/usr/bin/java -jar /home/devops/spc/target/spring-petclinic-3.0.0-SNAPSHOT.jar
SuccessExitStatus=101
TimeoutStopSec=10
Restart=on-failure
RestartSec=5


[Install]
WantedBy=multi-user.target